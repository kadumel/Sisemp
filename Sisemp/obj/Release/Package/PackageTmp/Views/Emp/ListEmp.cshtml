@model IEnumerable<Contexto.Models.EMP>

@{
    ViewBag.Title = "Empresas";
}
<br/>
<h2>Lista de Empresas</h2>
<br />
@using (Html.BeginForm())
{
    <div class="form-search">
        <input type="text" class="input-medium search-query" name="pesquisa">
        <button type="submit" class="btn">Buscar</button>
    </div>
}
<p>
    @Html.ActionLink("Novo", "CriarEmp")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CODIGO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RAZAOSOCIAL)
        </th>
        <th>
            ACÕES
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CODIGO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RAZAOSOCIAL)
        </td>
        <td>
            @Html.ActionLink("Alterar", "EditarEmp", new { id=item.CODIGO}) |
            @Html.ActionLink("Excluir", "ExcluirEmp", new { id=item.CODIGO} )
        </td>
    </tr>
}

</table>
