@model IEnumerable<Contexto.Models.APL>

@{
    ViewBag.Title = "Lista";
}
<br />
<h2>Lista de aplicações</h2>
<br />
@using (Html.BeginForm())
{
    <div class="form-search">
        <input type="text" class="input-medium search-query" name="pesquisa">
        <button type="submit" class="btn">Buscar</button>
    </div>
}
<p>
    @Html.ActionLink("Novo", "Criar")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CODIGO)
        </th>
        <th>
            TP
            @*@Html.DisplayNameFor(model => model.PAGT)*@
        </th>
        <th>
            CLIENTE
            @*@Html.DisplayNameFor(model => model.CLI_CODIGO)*@
        </th>
        @*<th>
                EMPRESA
                @Html.DisplayNameFor(model => model.EMP_CODIGO)
            </th>*@

        @*<th>
                @Html.DisplayNameFor(model => model.DATA)
            </th>*@

        <th>
            @Html.DisplayNameFor(model => model.VALOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TAXA)
        </th>
        <th>
            RETORNO
            @*@Html.DisplayNameFor(model => model.DTBASE)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QTDE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTBASE)
        </th>

        <th>
            AÇÕES
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAGT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CLI.NOME)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.EMP.NOME)
                </td>*@

            @*<td>
                    @Html.DisplayFor(modelItem => item.DATA)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.VALOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TAXA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VL_LUCRO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QTDE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DTBASE)
            </td>

            <td>
                @*@Html.ActionLink("Alterar", "Editar", new { id = item.CODIGO }) |*@
                @Html.ActionLink("Excluir", "Excluir", new { id = item.CODIGO })
            </td>
        </tr>
    }

</table>
